.PHONY: help install dev test lint fmt clean run migrate revision seed docker-up docker-down models-from-erd revision-auto routes-from-excel

help: ## Show this help message
	@echo 'Usage: make [target]'
	@echo ''
	@echo 'Targets:'
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "  %-15s %s\n", $$1, $$2}' $(MAKEFILE_LIST)

install: ## Install dependencies
	pip install -e .

dev: ## Install development dependencies
	pip install -e ".[dev]"

run: ## Run the application
	uvicorn app.main:app --reload --host 0.0.0.0 --port 8000

test: ## Run tests
	pytest

test-cov: ## Run tests with coverage
	pytest --cov=app --cov-report=html --cov-report=term-missing

lint: ## Run linting
	ruff check app tests
	mypy app

fmt: ## Format code
	black app tests
	ruff check --fix app tests

clean: ## Clean up temporary files
	find . -type f -name "*.pyc" -delete
	find . -type d -name "__pycache__" -delete
	find . -type d -name "*.egg-info" -exec rm -rf {} +
	rm -rf .coverage htmlcov .pytest_cache

migrate: ## Run database migrations
	alembic upgrade head

revision: ## Create a new migration
	alembic revision --autogenerate -m "$(msg)"

seed: ## Seed the database with sample data
	python -m app.scripts.seed

docker-up: ## Start services with Docker Compose
	docker compose up -d

docker-down: ## Stop Docker Compose services
	docker compose down

docker-build: ## Build Docker image
	docker compose build backend

docker-logs: ## Show Docker logs
	docker compose logs -f backend

db-shell: ## Connect to database shell
	docker compose exec postgres psql -U postgres -d mobile_backend

models-from-erd: ## Generate SQLAlchemy models from Mermaid ERD
	python tools/generate_models_from_mermaid.py

models-from-erd-dry: ## Generate SQLAlchemy models from Mermaid ERD (dry run)
	python tools/generate_models_from_mermaid.py --dry-run

models-from-erd-overwrite: ## Generate SQLAlchemy models from Mermaid ERD (overwrite existing)
	python tools/generate_models_from_mermaid.py --overwrite

revision-auto: ## Create autogenerated migration from ERD
	python tools/generate_models_from_mermaid.py
	alembic revision --autogenerate -m "autogen from erd"

revision-auto-dry: ## Create autogenerated migration from ERD (dry run)
	python tools/generate_models_from_mermaid.py --dry-run
	alembic revision --autogenerate -m "autogen from erd" --sql

routes-from-excel: ## Generate FastAPI routes from Excel API spec
	python tools/generate_routes_from_excel.py

routes-from-excel-dry: ## Generate FastAPI routes from Excel API spec (dry run)
	python tools/generate_routes_from_excel.py --dry-run

routes-from-excel-overwrite: ## Generate FastAPI routes from Excel API spec (overwrite existing)
	python tools/generate_routes_from_excel.py --overwrite

routes-from-excel-no-tests: ## Generate FastAPI routes from Excel API spec (skip tests)
	python tools/generate_routes_from_excel.py --skip-tests

routes-from-excel-no-services: ## Generate FastAPI routes from Excel API spec (skip services)
	python tools/generate_routes_from_excel.py --skip-services
